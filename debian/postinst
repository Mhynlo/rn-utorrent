#!/bin/sh
# postinst script for sample1
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
    chown -R admin:admin /apps/utserver

    event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="utserver" success="1"/></add-s>' 0 0
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
